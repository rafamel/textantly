{
  "name": "textantly",
  "version": "0.0.1",
  "description": "Delicious morning coffee. A keystroke away.",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run checks && react-scripts build",
    "lint": "eslint ./src --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "jest": "react-scripts test --env=jsdom --coverage",
    "test": "nodemon --watch test ./node_modules/.bin/run-s lint:test jest",
    "checks": "run-s lint lint:* jest",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "author": "Rafa Mel",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.31",
    "bootstrap": "^3.3.7",
    "bootstrap-material-design": "^0.5.10",
    "caman": "^4.1.2",
    "classnames": "^2.2.5",
    "custom-react-scripts": "^0.2.1",
    "eslint": "^4.13.1",
    "eslint-plugin-react-app": "^1.0.2",
    "font-awesome": "^4.7.0",
    "fs-readdir-recursive": "^1.1.0",
    "imports-loader": "^0.7.1",
    "jquery": "^3.2.1",
    "markdownlint-cli": "^0.5.0",
    "material-design-icons": "^3.0.1",
    "nodemon": "^1.13.3",
    "npm-run-all": "^4.1.2",
    "object-recursive-iterator": "^1.0.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-file-reader": "^1.1.3",
    "typeface-playfair-display-sc": "0.0.45",
    "typeface-roboto": "0.0.45"
  }
}
